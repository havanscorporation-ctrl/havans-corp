<script>
  function showAnswer(choice) {
    const area = document.getElementById("answer-area");
    let reply = "";

    if (choice === 1) {
      reply = "Havans Corporation is an educational platform focused on scenario-based examinations that test understanding and real-life application.";
    }
    if (choice === 2) {
      reply = "Our examinations are built around real-world scenarios. Learners solve one main task that integrates multiple topics.";
    }
    if (choice === 3) {
      reply = "Our exams are suitable for Senior 1 to Senior 4 learners following a competency-based curriculum.";
    }
    if (choice === 4) {
      reply = "Yes. Questions are published first, and solutions are added gradually as learners engage with the content.";
    }

    area.innerHTML = `
      <div class="chat-message user">I want to know.</div>
      <div class="chat-message bot">${reply}</div>
    `;
  }
</script>

